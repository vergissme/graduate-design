<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.nfchats.dao.LogDao">

    <select id="findBySearch" resultType="org.example.nfchats.entity.Log">
        select * from log
        <where>
            <if test="params != null and params.name != null and params.name != ''">
                 name like concat('%', #{ params.name }, '%')
            </if>
            <if test="params != null and params.username != null and params.username != ''">
                and username like concat('%', #{ params.username }, '%')
            </if>
        </where>
        order by time desc
    </select>

</mapper>